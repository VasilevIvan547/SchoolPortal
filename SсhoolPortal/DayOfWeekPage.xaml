            <StackPanel Orientation="Horizontal">
                <TextBlock Text="1" FontSize="20" FontWeight="Medium" Margin="0 0 15 20"/>
                <ComboBox materialDesign:HintAssist.Hint="Предмет" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Height="40" MinWidth="130" Margin="0 0 10 0"/>
                <ComboBox materialDesign:HintAssist.Hint="Учитель" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Height="40" MinWidth="130" Margin="0 0 10 0"/>
                <ComboBox materialDesign:HintAssist.Hint="Кабинет" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Height="40" MinWidth="130"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="2" FontSize="20" FontWeight="Medium" Margin="0 0 15 20"/>
                <ComboBox materialDesign:HintAssist.Hint="Предмет" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Height="40" MinWidth="130" Margin="0 0 10 0"/>
                <ComboBox materialDesign:HintAssist.Hint="Учитель" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Height="40" MinWidth="130" Margin="0 0 10 0"/>
                <ComboBox materialDesign:HintAssist.Hint="Кабинет" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Height="40" MinWidth="130"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="3" FontSize="20" FontWeight="Medium" Margin="0 0 15 20"/>
                <ComboBox materialDesign:HintAssist.Hint="Предмет" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Height="40" MinWidth="130" Margin="0 0 10 0"/>
                <ComboBox materialDesign:HintAssist.Hint="Учитель" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Height="40" MinWidth="130" Margin="0 0 10 0"/>
                <ComboBox materialDesign:HintAssist.Hint="Кабинет" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Height="40" MinWidth="130"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="4" FontSize="20" FontWeight="Medium" Margin="0 0 15 20"/>
                <ComboBox materialDesign:HintAssist.Hint="Предмет" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Height="40" MinWidth="130" Margin="0 0 10 0"/>
                <ComboBox materialDesign:HintAssist.Hint="Учитель" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Height="40" MinWidth="130" Margin="0 0 10 0"/>
